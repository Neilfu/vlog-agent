# 中国AI智能短视频创作系统 - 环境配置
# Chinese AI Intelligent Short Video Creation System - Environment Configuration

# === 基础配置 ===
DEBUG=true
HOST=0.0.0.0
PORT=8000

# === 数据库配置 ===
DATABASE_URL=postgresql://video_user:video_password@localhost:5432/video_creator
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# === Redis配置 ===
REDIS_URL=redis://localhost:6379/0
REDIS_POOL_SIZE=10

# === JWT配置 ===
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=1440
JWT_REFRESH_EXPIRATION_DAYS=7

# === AI服务配置 ===
# DeepSeek API配置
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1
DEEPSEEK_MODEL=deepseek-chat
DEEPSEEK_MAX_TOKENS=4000
DEEPSEEK_TEMPERATURE=0.7

# 即梦大模型配置 (火山引擎)
VOLC_ACCESS_KEY=your_volc_access_key_here
VOLC_SECRET_KEY=your_volc_secret_key_here
VOLC_REGION=cn-north-1
JIMENG_BASE_URL=https://open-api.dreamina.com/v1

# AutoGen配置
AUTOGEN_MODEL=gpt-4
AUTOGEN_TEMPERATURE=0.7

# === 文件存储配置 (阿里云OSS) ===
OSS_BUCKET=your-bucket-name
OSS_REGION=cn-beijing
OSS_ACCESS_KEY=your_oss_access_key_here
OSS_SECRET_KEY=your_oss_secret_key_here

# === 微信配置 ===
WECHAT_APP_ID=your_wechat_app_id_here
WECHAT_APP_SECRET=your_wechat_app_secret_here
WECHAT_REDIRECT_URI=http://localhost:8000/api/v1/auth/wechat/callback

# === 监控配置 ===
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=8001

# === 日志配置 ===
LOG_LEVEL=INFO
LOG_FORMAT=json

# === 业务配置 ===
MAX_FILE_SIZE=524288000  # 500MB in bytes
CACHE_TTL=3600  # 1 hour in seconds
SESSION_TTL=86400  # 24 hours in seconds

# === 中国特定配置 ===
CHINA_CDN_ENABLED=true
CHINA_REGION_OPTIMIZATION=true