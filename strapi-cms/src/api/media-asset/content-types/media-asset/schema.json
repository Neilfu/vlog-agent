{
  "kind": "collectionType",
  "collectionName": "media_assets",
  "info": {
    "singularName": "media-asset",
    "pluralName": "media-assets",
    "displayName": "Media Asset",
    "description": "Media assets including images, videos, audio files"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "maxLength": 200,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "image",
        "video",
        "audio",
        "document"
      ],
      "required": true
    },
    "file": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "videos",
        "audios",
        "files"
      ]
    },
    "fileSize": {
      "type": "integer"
    },
    "mimeType": {
      "type": "string"
    },
    "assetMetadata": {
      "type": "json"
    },
    "tags": {
      "type": "json"
    },
    "source": {
      "type": "enumeration",
      "enum": [
        "upload",
        "ai_generated",
        "external"
      ],
      "default": "upload"
    },
    "aiModel": {
      "type": "string"
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "active",
        "processing",
        "error",
        "archived"
      ],
      "default": "active"
    },
    "project": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::project.project",
      "inversedBy": "mediaAssets"
    },
    "thumbnail": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "checksum": {
      "type": "string"
    },
    "originalName": {
      "type": "string"
    },
    "description": {
      "type": "text",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    }
  }
}